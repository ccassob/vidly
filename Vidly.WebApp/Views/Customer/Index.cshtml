@model IEnumerable<Vidly.WebApp.Models.Customer>

@{
    ViewBag.Title = "Index";
}
<h2>Customers</h2>
<p>
    @Html.ActionLink("New Customer", "New", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                MemberShipType Name
            </th>
            <th>
                Discount Rate
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                </td>
           
                <td>
                    @Html.DisplayFor(m => item.MemberShipType.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.MemberShipType.DiscountRate)%
                </td>
            </tr>
        }
    </tbody>
</table>
