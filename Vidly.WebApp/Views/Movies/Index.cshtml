@model IEnumerable<Vidly.WebApp.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table class="table">
    <tr>
        <th>
            Movie
        </th>
        <th>
            Genre
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
        </tr>
    }

</table>
